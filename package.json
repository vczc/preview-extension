{
  "name": "wuazhu-vscode-plugin-demo",
  "displayName": "wuazhu-vscode-plugin-demo",
  "description": "auth: wuazhu, vscode-plugin-demo",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "publisher": "wuazhu",
  "categories": [
    "Other"
  ],
  "icon": "images/logo.png",
  "activationEvents": [
		"onCommand:extension.zopHello",
    "onView:zopCheckDebugToolView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    
    "commands": [
      {
        "command": "zop-plugin.zopHello",
        "title": "zopHello"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "zop-plugin.zopHello",
          "group": "navigation@1"
        }
      ]
    },
    
    "viewsContainers": {
			"activitybar": [
				{
					"id": "zopview",
					"title": "zopview",
					"icon": "images/car.svg"
				}
			]
		},
    "views": {
      "zopview": [
          {
              "id": "zopCodeGenerate",
              "name": "代码生成工具"
          },
          {
              "id": "zopEditorDebugTool",
              "name": "编辑调试工具"
          },
          {
              "id": "zopCheckDebugToolView",
              "name": "验证调试工具"
          },
          {
              "id": "zopSetting",
              "name": "设置"
          },
          {
              "id": "checkDebugTool",
              "name": "帮助和反馈"
          }
      ]
    }
  },
  
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
